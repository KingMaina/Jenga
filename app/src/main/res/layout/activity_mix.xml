<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context="com.example.user.jenga.mix">

    <ImageView
        android:layout_marginBottom="3dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/cardview_style"
        android:id="@+id/imageView4"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:paddingTop="30dp"
        android:paddingBottom="5dp"
        app:srcCompat="@drawable/bamburi"
        android:layout_above="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/textView15"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Choose from the brands below"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_marginTop="3dp"
        android:background="@drawable/cardview_style"
        android:paddingBottom="6dp"
        android:paddingTop="4dp"
        android:id="@+id/imageView5"
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/bluetriangle"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_alignBottom="@+id/imageView4" />

    <ImageView
        android:paddingTop="30dp"
        android:paddingBottom="5dp"
        android:background="@drawable/cardview_style"
        android:id="@+id/imageView6"
        android:layout_width="200dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/cementbags"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:paddingTop="5dp"
        android:paddingBottom="6dp"
        android:background="@drawable/cardview_style"
        android:id="@+id/imageView7"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/simba"
        android:layout_alignTop="@+id/imageView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6"
        android:layout_alignBottom="@+id/imageView6" />

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="65dp"
        android:layout_marginRight="65dp"
        android:layout_toLeftOf="@+id/imageView5"
        android:layout_toStartOf="@+id/imageView5"
        android:text="Bamburi"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:text="Blue Triangle"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView16"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_below="@+id/imageView6"
        android:text="Dangote"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView17"
        android:layout_alignRight="@+id/textView17"
        android:layout_below="@+id/imageView7"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="Simba"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>
