<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@drawable/bck"
    android:id="@+id/circleDesign"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />


    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/textDesign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/circleDesign" />

    <TextView
        android:id="@+id/textDesign2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/textDesign"
        android:layout_toRightOf="@+id/circleDesign"
        android:layout_toEndOf="@+id/circleDesign"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/buttonDesign"
        android:background="@drawable/cardview_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/circleDesign"
        android:layout_toRightOf="@+id/circleDesign" />

</RelativeLayout>