<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleEngineer"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/bck" />


    <TextView
        android:id="@+id/textEngineer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/circleEngineer"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textEngineer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textEngineer"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/circleEngineer"
        android:layout_toRightOf="@+id/circleEngineer"
        android:text="TextView" />

    <Button
        android:id="@+id/buttonEngineer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/circleEngineer"
        android:layout_toRightOf="@+id/circleEngineer"
        android:background="@drawable/cardview_style"
        android:text="Contact"
        android:textColor="@android:color/white" />

</RelativeLayout>