<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.jenga.dangotebuy">
    <ImageView
        android:id="@+id/dagimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cementbags"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:id="@+id/ratingBar10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dagimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />

    <TextView
        android:id="@+id/textView299"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:textSize="18sp"
        android:text="Price per bag: Ksh 650" />

    <TextView
        android:id="@+id/textView309"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_below="@+id/textView299"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:layout_marginTop="11dp"
        android:text="Choose number of bags:" />

    <EditText
        android:id="@+id/editText50"
        android:hint="Enter number of bags"
        android:layout_width="wrap_content"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/textView309"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Total"
        android:paddingLeft="6sp"
        android:paddingRight="6sp"
        android:background="@drawable/cardview_style"
        android:textColor="@android:color/black"
        android:layout_below="@+id/editText50"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView319"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button60"
        android:layout_marginTop="11dp"
        android:textColor="@android:color/black"
        android:layout_toLeftOf="@+id/button60"
        android:layout_toStartOf="@+id/button60"
        android:text="TOTAL" />

    <TextView
        android:id="@+id/textView329"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textView319"
        android:layout_toEndOf="@+id/textView319"
        android:layout_toRightOf="@+id/textView319"
        android:text="" />

    <Button
        android:id="@+id/button79"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textView329"
        android:layout_alignRight="@+id/button60"
        android:layout_alignEnd="@+id/button60"
        android:layout_marginTop="12dp" />
</RelativeLayout>
